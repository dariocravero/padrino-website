            = link_to '/' do
              = image_tag "http://placehold.it/150x150&text=Padrino%20Logo"
          %li.header-nav-item= link_to "Menu 1", '/menu/1'
          %li.header-nav-item= link_to "Menu 2", '/menu/2'
